<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.example.teachinghelper.loginAndRegister.welcomeActivity"
android:orientation="vertical"
android:background="@color/bg_login"
android:gravity="center"
android:padding="20dp">
<Button
    android:id="@+id/btn_choose_teacher"
    android:text="@string/btn_choose_teacher"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    />
<Button
    android:id="@+id/btn_choose_student"
    android:text="@string/btn_choose_student"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    />



</LinearLayout>